@model List<Cadeteria.Models.Cadete>
@{
    ViewData["Title"] = "BajaCadete";
}

<h1>@ViewData["Title"]</h1>

<div>
    <table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Telefono</th>
            <th>Direccion</th>
            <th>CantPedidos</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cadete in Model)
        {
            <tr>
                <tr>
                <td>@cadete.Id</td>
                <td>@cadete.Nombre</td>
                <td>@cadete.Telefono</td>
                <td>@cadete.Direccion</td>
                <td>@cadete.listadoPedidos.Count()</td>
            </tr>
                <td>
                    @using(Html.BeginForm("Borrar", "CadeteriaHub", FormMethod.Get))
                    {
                        <input type="hidden" name="id" value=@cadete.Id >
                        <input type="submit" value="Borrar" class="btn btn-primary">
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
</div>